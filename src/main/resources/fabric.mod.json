{
  "schemaVersion": 1,
  "id": "sspb",
  "version": "${version}",

  "name": "Sodium Shadowy Path Blocks",
  "description": "SSPB reintroduces vanilla-like smooth lighting to all non-fluid blocks with non-full faces (e.g. dirt paths and how they have dark shading when directly next to a full block), as Sodium removes this.",
  "authors": [
    "Rynnavinx"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/sodium-shadowy-path-blocks",
    "sources": "https://github.com/Rynnavinx/sodium-shadowy-path-blocks",
    "issues": "https://github.com/Rynnavinx/sodium-shadowy-path-blocks/issues"
  },

  "license": "LGPLv3",
  "icon": "assets/sspb/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "rynnavinx.sspb.client.SSPBClientMod"
    ]
  },
  "custom": {
    "modmenu": {
      "parent": {
        "id": "sodium"
      }
    }
  },
  "mixins": [
    "sspb.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.0",
    "java": ">=16",

    "sodium": [
      "0.3.x",
      "0.4.0-alpha5"
    ]
  }
}
